{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
	Mes candidatures
{% endblock %}

{% block body %}
	
	<h1>Mes candidatures <a href="{{ path('mapage') }}"><input type="submit" value="Retour" id="BoutonAnnonce"></a></h1>
	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
	Nombre total de candidatures : {{ pagination.getTotalItemCount }}
	
	<table>
	{% for annonce in pagination %}
		<table id="Admin">
			<tr>
				<th style=" background-color: rgb(224,234,137);">
						<p id="Titre">{{ annonce.datepublication|date('d/m/Y') }}</p></br>
						<p id="TitreAnnonceAdmin">{{ annonce.TitreAnnonce|upper}}</br>
						{{ annonce.GrandeVilleProche }} ({{ annonce.idDepartement }})</p>
				</th>
			<th>
			{% for site in annonce.site %} 
				{{ include("OCPlatformBundle:Advert:ImageSite.html.twig") }}
			{% endfor %}
			</th>
			</tr>
			<tr>
				<td COLSPAN=2><b><p id="TitrePetit">Le poste :  </p></b>{{ annonce.DescriptifAnnonce }}</td>
			</tr>
			<tr>
				<td COLSPAN=2><b><p id="TitrePetit">Profil recherché :  </p></b>{{ annonce.ProfilRecherche }}</td>
			</tr>
			<tr>
				<td><b><p id="TitrePetit">Niveau :  </p></b>{{ annonce.idNiveauSouhaite }}</td>
				<td><b><p id="TitrePetit">Recruteur :  </p></b>{{ annonce.idRecruteur }}</td>
			</tr>
			<tr>
				<td><b><p id="TitrePetit">Rémunération :   </p></b>{{ annonce.Remuneration }}</td>
				<td><b><p id="TitrePetit">Référence :   </p></b>{{ annonce.id }}</td>
			</tr>
			<tr>
				<td colspan = 2><b><p id="TitrePetit">Fonction :   </p></b>
						{% for fonction in annonce.site %}
							{{ fonction.idFonction }}
						{% endfor %}</td>
			</tr>

					</table>
					{% endfor %}
				</table>
				<div class="navigation">
					{{ knp_pagination_render(pagination) }}
				</div>
	
{% endblock %}