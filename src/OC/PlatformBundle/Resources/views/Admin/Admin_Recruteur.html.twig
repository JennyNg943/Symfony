{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
	Recrutic
{% endblock %}

{% block body %}
	<table id="Fonctiontri">
		<tr><th>Recherche un recruteur ? </th></tr>
		<tr><td>{{ form(form) }}</td></tr>
	</table>
	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
	Nombre total fonction : {{ pagination.getTotalItemCount }}
	<table id="TableCandidat">
		<tr>
			<th>id</th>
			<th>Societe</th>
			<th>Nom / Prenom</th>
			<th>Gestion</th>
		</tr>
		{% for recruteur in pagination %}
		<tr>
			<td>{{ recruteur.id }} </td>
			<td> {{ recruteur.Societe}}</td>
			<td> {{ recruteur.nomContactComm}} {{ recruteur.prenomContactComm}}</td>
			<td><a href="{{ path('admin_recruteur_delete', {'id':recruteur.id})}}" onclick="return confirm('Voulez vous vraiment supprimer cette fonction ? {{ recruteur.Societe }} - {{ recruteur.nomContactComm }}')">
											{% image 'bundles/app/img/Supprimer.png' %}
											<img src="{{ asset_url }}" alt="Supprimer" id="CVThequeImg"/>
											{% endimage %}</a>
											<a href="{{ path('admin_fonction_modif', {'id':recruteur.id})}}">
										{% image 'bundles/app/img/Modifier.jpg' %}
											<img src="{{ asset_url }}" alt="Modifier" id="CVThequeImg"/>
										{% endimage %}</a>
			</td>
		</tr>
		{% endfor %}
	</table>
	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
{% endblock %}